@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>MVC Bank</h1>
    <p class="lead">MVC Bank is the coolest bank ever!</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Powered by ASP.NET</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Register</h2>
        <p>
            Open an account with us.
        </p>
        <p>@Html.ActionLink("Register", "Contact", "Home", null, new {@class = "btn btn-default" })</p>
    </div>
    <div class="col-md-4">
        <h2>Have an account?</h2>
        <p>Access your existing account.</p>
        <p>@Html.ActionLink("Log in", "Log in", "Accounts", null, new { @class = "btn btn-default" })</p>
    </div>
</div>